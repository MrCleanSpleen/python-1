#!/usr/bin/env python3
import colors as c
import time as t
def prompt(question):
    print(question)
    answer = input(c.green + '> ' + c.red)
    print(c.reset)
    return answer
print(c.clear + c.orange + '''Who would cross the bridge of Death
Must answer me these questions three
'Ere the other side he see.''')
t.sleep(2)
print(c.clear + c.reset)
name = prompt('What is your name?')
quest = prompt('What is your quest?')

if name in ['Lancelot', 'Galahad']:
    color = prompt('What is your favorite color?')
    print(c.reset + 'Right, off you go then.')
elif name == 'Robin':
    assyria = prompt('What is the capital of Assyria?')
    if assyria == 'Assur':
        print('Right, off you go then.')
    else:
        print('You will now be cast into the Gorge of Eternal Peril.')
elif name == 'Arther':
    swallow = prompt('What is the air speed of an unladen swallow?')
    if swallow == 'What do you mean? African or European?':
        print('''What? I don't know that... AHHHHHHHHHHHHHHHHHH!!!!!''')
    elif swallow == 'slighty faster than that of a laden swallow.':
        print('Right, off you go then.')
    else:
        print('You will now be cast into the Gorge of Eternal Peril.')
