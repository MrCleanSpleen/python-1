#!/usr/bin/env python3
import colors as c
import time as t
from utils import ask
def yes():
    print('You are correct!!!')

def no():
    print('''I'm sorry, that is incorrect.''') 

print(c.clear + c.magenta + '''Welcome to the Pink Fluffy Unicorn quiz.
Let's test your knowledge to see what you've learned so far...
''')
t.sleep(2)
a1 = ask('What color are the unicorns?')
if 'pink' in a1:
    yes()
else:
    no()
t.sleep(2)
a2 = ask('Where are they dancing?')
if 'rainbows' in a2:
    yes()
else:
    no()

