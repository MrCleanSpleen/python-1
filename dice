#!/usr/bin/env python3

print(c.clear)

sides = []

n = 0
sides.append('''
 -----
|     |
|  0  |
|     |
 -----
''')

sides.append('''
 -----
|    0|
|     |
|0    |
 -----
''')

sides.append('''
 -----
|    0|
|  0  |
|0    |
 -----
''')

sides.append('''
 -----
|0   0|
|     |
|0   0|
 -----
''')

sides.append('''
 -----
|0   0| 
|  0  |
|0   0|
 -----
''')

sides.append('''
 -----
|0 0 0| 
|     |
|0 0 0|
 -----
''')

import random

while True:
    side = random.choice(sides)
    print(c.clear + c.random_color() + side + c.reset)
    input()

